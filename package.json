{
  "name": "tenzir-ui-component-library",
  "author": "Tenzir",
  "version": "0.9.0",
  "scripts": {
    "build:reason": "bsb -clean-world && bsb -make-world",
    "build:storybook": "build-storybook",
    "build": "yarn build:reason && yarn build:storybook",
    "clean": "bsb -clean-world",
    "start": "bsb -make-world -w -ws _ ",
    "server": "start-storybook -p 6006",
    "deploy-storybook": "yarn build:reason && storybook-to-ghpages",
    "test": "yarn clean && yarn build:reason && jest",
    "tdd": "jest --watchAll"
  },
  "lint-staged": {
    "*.js": [
      "prettier --print-width 80 --write"
    ],
    "*.{re,rei}": [
      "bsrefmt --in-place"
    ]
  },
  "keywords": [
    "UI-Library",
    "UI-Components",
    "ReasonML",
    "ReasonReact",
    "Reason-React"
  ],
  "license": "BSD-3-Clause",
  "peerDependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "reason-react": ">=0.9.1"
  },
  "dependencies": {
    "@storybook/storybook-deployer": "^2.8.8",
    "bs-css-emotion": "^3.0.0",
    "bs-flexboxgrid": "^3.0.0",
    "bs-webapi": "^0.19.1",
    "react-icons": "^4.2.0",
    "react-syntax-highlighter": "^15.4.3",
    "regenerator-runtime": "^0.13.5",
    "storybook-dark-mode": "^1.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@glennsl/bs-jest": "^0.7.0",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addons": "^6.2.9",
    "@storybook/api": "^6.2.9",
    "@storybook/components": "^6.2.9",
    "@storybook/core": "^6.2.9",
    "@storybook/core-events": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@storybook/theming": "^6.2.9",
    "babel-loader": "^8.2.2",
    "bs-platform": "^8.3.1",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.4.2",
    "prettier": "^2.3.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-scripts": "^4.0.3",
    "reason-react": ">=0.9.1"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(@glennsl|bs-platform|bs-css)/)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
